{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Cli/bin/Debug/netcoreapp3.1/Metre.Cli.exe",
            "args": [
                "analyze",
                "./Cli.csproj"
            ],
            "cwd": "${workspaceFolder}/Cli",
            "stopAtEntry": false,
            "console": "internalConsole",
            "justMyCode": true,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Framework Launch (console)",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Cli/bin/Debug/net48/Metre.Cli.exe",
            "args": [
                "analyze",
                "./Cli.csproj"
            ],
            "cwd": "${workspaceFolder}/Cli",
            "stopAtEntry": false,
            "console": "internalConsole",
            "justMyCode": true,
            "logging": {
                "moduleLoad": false
            }
        }
    ]
}
